# molior-deploy plugin
# vim: syntax=sh

# init_deployment_dir() is used from multiple plugins and defined in molior-deploy

finalize_deployment()
{
  deployment=$(get_deployment_filename "tar")
  log "creating $deployment"
  umount_bootstrap
  umount_fs

  cwd=`pwd`
  cd $target
  tar -cf ../$deployment .
  cd - >/dev/null
}

