# molior-deploy plugin
# vim: syntax=sh

# init_deployment_dir() is used from multiple plugins and defined in molior-deploy

finalize_deployment()
{
  deployment=$(get_deployment_filename "tar.xz")
  echo " * creating $deployment"
  umount_bootstrap
  umount_fs

  cwd=`pwd`
  cd $target
  tar $TAR_PXZ -cf $cwd/$deployment .
  cd - >/dev/null

  if [ -n "$SUDO_UID" -a -n "$SUDO_GID" ]; then
    chown $SUDO_UID:$SUDO_GID $deployment
  fi
}

